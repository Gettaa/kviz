<Page x:Class="kviz.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kviz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.ColumnDefinitions/>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="kerdesosszeg" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="14" Margin="10,10,10,10"/>
        <ListBox x:Name="eddigieredmeny" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="14" Margin="10,10,10,10"/>
        <Label x:Name="neveredmenyei" Content="ő eddigi eredményei" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="47" Width="780" VerticalContentAlignment="Center" FontSize="14"/>
        <Label x:Name="jatekeredmenytema" Content="A játék eredménye (téma):" HorizontalAlignment="Center" VerticalAlignment="Center" Height="37" Width="780" VerticalContentAlignment="Center" FontSize="14"/>
    </Grid>
</Page>
